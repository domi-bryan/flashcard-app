<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editDeckLinearLayout"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SCREEN3_EditDeckName">


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/editable"
        android:hint="INSERT NEW DECK NAME"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Editdeck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/enabled"
        android:onClick="EditCard"
        android:padding="24dp"
        android:layout_marginTop="12dp"
        android:text="Edit Deck Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/editText2" />


    <Button
        android:id="@+id/deleteDeckButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/wrong"
        android:onClick="deleteDeck"
        android:padding="25dp"
        android:text="Delete Deck"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>
