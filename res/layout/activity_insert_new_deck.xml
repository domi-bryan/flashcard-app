<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SCREEN4_InsertNewDeck"
    android:background="#000000"
    android:orientation="vertical">

    <EditText
        android:id="@+id/newDeckName"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:hint="New Deck Name"
        android:textColorHint="#888888"
        tools:layout_editor_absoluteY="72dp"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:background="@drawable/editable"/>

    <EditText
        android:id="@+id/firstQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        app:layout_constraintTop_toBottomOf="@id/newDeckName"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:hint="QUESTION"
        android:textColorHint="#888888"
        tools:layout_editor_absoluteY="72dp"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:background="@drawable/editable" />

    <EditText
        android:id="@+id/firstAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        app:layout_constraintTop_toBottomOf="@id/firstQuestion"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:hint="ANSWER"
        android:textColorHint="#888888"
        tools:layout_editor_absoluteY="72dp"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:background="@drawable/editable"
        android:layout_marginBottom="12dp"/>
    <Button
        android:id="@+id/createNewdeck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/enabled"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Create New Deck"
        android:textColor="#FFFFFF"
        android:onClick="createNewDeck"
        android:layout_weight="1"
        android:textSize="24sp"/>

</LinearLayout>